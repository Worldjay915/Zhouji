<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ic_action_back" />

    <TextView
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="25sp"
        android:id="@+id/tv_modify"
        android:textColor="@color/blank"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mTextInputLayoutUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        >
    <EditText
        android:layout_width="200dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:id="@+id/et_user"
        android:hint="用户名"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mTextInputLayoutDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        >
    <EditText
        android:layout_width="200dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:id="@+id/et_desc"
        android:hint="简介"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/mTextInputLayoutPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/et_password1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:hint="密码" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mTextInputLayoutRePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        >
    <EditText
        android:layout_width="200dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:id="@+id/et_password2"
        android:hint="确认密码"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mTextInputLayoutReEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        >
    <EditText
        android:layout_width="200dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:id="@+id/et_email"
        android:hint="邮箱"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="200dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegisted"
        android:text="注册"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_bg"/>


</LinearLayout>